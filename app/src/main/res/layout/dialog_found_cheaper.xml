<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Нашли дешевле"
            android:textColor="@color/colorGreen"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/ico_cancel" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название, название, название"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Ваши данные"/>

    <!-- Фамилия имя отчество -->
    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_gray"
        android:padding="10dp">

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="Фамилия Имя Отчество *" />
    </LinearLayout>

    <!-- Телефон -->
    <LinearLayout
        android:id="@+id/layout_tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_gray"
        android:padding="10dp">

        <EditText
            android:id="@+id/txt_tell"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="+7 (XXX) XXX-XX-XX *" />
    </LinearLayout>

    <!-- Почта -->
    <LinearLayout
        android:id="@+id/layout_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_gray"
        android:padding="10dp">

        <EditText
            android:id="@+id/txt_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="E-mail" />
    </LinearLayout>

    <!-- Ссылка на товар -->
    <LinearLayout
        android:id="@+id/layout_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_gray"
        android:padding="10dp">

        <EditText
            android:id="@+id/txt_link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:background="@color/colorWhite"
            android:hint="Ссылка на товар" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:text="Обращаем ваше внимание, что услуга «Нашли дешевле» доступна только в рабочие часы компании. Если вы оставили заявку в нерабочее время, она будет обработана в начале следующего рабочего дня. Заявка на уведомление не является заказом
        \n\nНажимая ''Отправить'', я даю согласие на обработку моих персональных данных."/>
    <!-- Отправить -->
    <LinearLayout
        android:id="@+id/layout_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreen"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Отправить"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>